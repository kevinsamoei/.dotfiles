{
    "version": "2.0.0",
    "tasks": [{
        "type": "shell",
        "label": "shell: g++-8 build active file",
        "command": "/usr/local/bin/g++-8",
        "args": [
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
            "cwd": "/usr/local/bin"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }]
}